<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="120dp"
        android:textColor="#FBA29C"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvLocation"
        app:layout_constraintTop_toBottomOf="@+id/tvSettings" />

    <Spinner
        android:id="@+id/spPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FBA29C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/spLocation"
        tools:layout_editor_absoluteY="309dp" />

    <Spinner
        android:id="@+id/spCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="108dp"
        android:textColor="#FBA29C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/spPrice"
        app:layout_constraintTop_toBottomOf="@+id/spPrice" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="176dp"
        android:text="Location"
        android:textColor="#FBA29C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvPriceFilter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPriceFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Price"
        android:textColor="#FBA29C"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvLocation"
        tools:layout_editor_absoluteX="64dp" />

    <TextView
        android:id="@+id/tvCategoryFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Category"
        android:textColor="#FBA29C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvPriceFilter"
        tools:layout_editor_absoluteY="438dp" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:text="Finish"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#FBA29C"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
